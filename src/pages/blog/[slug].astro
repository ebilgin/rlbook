---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getBlogPosts, formatDate, authors } from '../../lib/blog';

export async function getStaticPaths() {
  const mdxModules = import.meta.glob('/content/blog/*/index.mdx', { eager: true });
  const posts = getBlogPosts(mdxModules);

  return posts.map((post) => ({
    params: { slug: post.slug },
    props: {
      post,
      mdxModule: Object.entries(mdxModules).find(
        ([path]) => path.includes(`/${post.dirName}/`)
      )?.[1],
    },
  }));
}

const { post, mdxModule } = Astro.props;
const Content = mdxModule?.default;
const { author } = post;
---

<BaseLayout title={post.title} description={post.description}>
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-3xl mx-auto px-4 py-12">
        <nav class="text-sm text-gray-500 dark:text-gray-400 mb-4">
          <a href="/" class="hover:text-primary-600 dark:hover:text-primary-400">Home</a>
          <span class="mx-2">&rarr;</span>
          <a href="/blog" class="hover:text-primary-600 dark:hover:text-primary-400">Blog</a>
          <span class="mx-2">&rarr;</span>
          <span class="text-gray-900 dark:text-gray-100">{post.title}</span>
        </nav>

        <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100 mb-4">
          {post.title}
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-6">
          {post.description}
        </p>

        <!-- Author info -->
        <div class="flex items-center gap-4">
          {author.avatar ? (
            <img
              src={author.avatar}
              alt={author.name}
              class="w-12 h-12 rounded-full"
            />
          ) : (
            <div class="w-12 h-12 rounded-full bg-primary-100 dark:bg-primary-900/50 flex items-center justify-center text-primary-700 dark:text-primary-300 text-lg font-semibold">
              {author.name.charAt(0)}
            </div>
          )}
          <div>
            <a
              href={`/blog?author=${author.slug}`}
              class="text-gray-900 dark:text-gray-100 font-semibold hover:text-primary-600 dark:hover:text-primary-400"
            >
              {author.name}
            </a>
            <div class="text-sm text-gray-500 dark:text-gray-400">
              <time datetime={post.publishedDate}>
                {formatDate(post.publishedDate)}
              </time>
              {post.updatedDate && (
                <span> &middot; Updated {formatDate(post.updatedDate)}</span>
              )}
            </div>
          </div>
          <div class="ml-auto flex gap-2">
            {author.twitter && (
              <a
                href={author.twitter}
                target="_blank"
                class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300"
                title="Twitter"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              </a>
            )}
            {author.linkedin && (
              <a
                href={author.linkedin}
                target="_blank"
                class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300"
                title="LinkedIn"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
            )}
            {author.github && (
              <a
                href={author.github}
                target="_blank"
                class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300"
                title="GitHub"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
            )}
            {author.website && (
              <a
                href={author.website}
                target="_blank"
                class="text-gray-400 hover:text-gray-600 dark:hover:text-gray-300"
                title="Website"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"/>
                </svg>
              </a>
            )}
          </div>
        </div>
      </div>
    </header>

    <!-- Content -->
    <main class="max-w-3xl mx-auto px-4 py-12">
      {Content ? (
        <article class="prose prose-lg dark:prose-invert max-w-none">
          <Content />
        </article>
      ) : (
        <div class="text-center py-20 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
          <div class="text-6xl mb-4">üìù</div>
          <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">Content Coming Soon</h2>
          <p class="text-gray-600 dark:text-gray-400 max-w-md mx-auto mb-6">
            This post is still being written. Check back soon!
          </p>
          <a href="/blog" class="text-primary-600 dark:text-primary-400 hover:underline">
            &larr; Back to Blog
          </a>
        </div>
      )}

      <!-- Author bio card -->
      {author.bio && (
        <div class="mt-12 p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
          <div class="flex items-start gap-4">
            {author.avatar ? (
              <img
                src={author.avatar}
                alt={author.name}
                class="w-16 h-16 rounded-full"
              />
            ) : (
              <div class="w-16 h-16 rounded-full bg-primary-100 dark:bg-primary-900/50 flex items-center justify-center text-primary-700 dark:text-primary-300 text-xl font-semibold flex-shrink-0">
                {author.name.charAt(0)}
              </div>
            )}
            <div>
              <h3 class="text-lg font-bold text-gray-900 dark:text-gray-100 mb-1">
                About {author.name}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mb-3">{author.bio}</p>
              <a
                href={`/blog?author=${author.slug}`}
                class="text-primary-600 dark:text-primary-400 text-sm font-medium hover:underline"
              >
                View all posts by {author.name} &rarr;
              </a>
            </div>
          </div>
        </div>
      )}

      <!-- Navigation -->
      <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700">
        <a
          href="/blog"
          class="inline-flex items-center text-primary-600 dark:text-primary-400 hover:underline font-medium"
        >
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to Blog
        </a>
      </div>

      <!-- Giscus comments -->
      <div id="giscus-container" class="mt-12">
        <script
          src="https://giscus.app/client.js"
          data-repo="ebilgin/rlbook"
          data-repo-id="R_kgDOQw0g7Q"
          data-category="General"
          data-category-id="DIC_kwDOQw0g7c4C0Yda"
          data-mapping="pathname"
          data-strict="0"
          data-reactions-enabled="1"
          data-emit-metadata="0"
          data-input-position="bottom"
          data-theme="dark"
          data-lang="en"
          crossorigin="anonymous"
          async
        ></script>
      </div>
    </main>
  </div>
</BaseLayout>
