---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getContentItems, statusIcons, statusLabels } from '../../lib/content';

// Get all application MDX files
const mdxModules = import.meta.glob('/content/applications/*/index.mdx', { eager: true });
const applications = getContentItems(mdxModules, 'applications');

// Group by section if available
const appsBySection = applications.reduce((acc, app) => {
  const section = app.section || 'Applications';
  if (!acc[section]) acc[section] = [];
  acc[section].push(app);
  return acc;
}, {} as Record<string, typeof applications>);
---

<BaseLayout title="Applications">
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-5xl mx-auto px-4 py-12">
        <nav class="text-sm text-gray-500 dark:text-gray-400 mb-4">
          <a href="/" class="hover:text-primary-600 dark:hover:text-primary-400">Home</a>
          <span class="mx-2">‚Üí</span>
          <span class="text-gray-900 dark:text-gray-100">Applications</span>
        </nav>
        <div class="flex items-center gap-3 mb-4">
          <span class="text-4xl">üéØ</span>
          <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100">Applications</h1>
        </div>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl">
          End-to-end guides for formulating real-world problems as reinforcement learning.
          State, action, reward design and deployment considerations.
        </p>
      </div>
    </header>

    <!-- Applications List -->
    <main class="max-w-5xl mx-auto px-4 py-12">
      {applications.length === 0 ? (
        <div class="text-center py-20 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
          <div class="text-6xl mb-4">üéØ</div>
          <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">Applications Coming Soon</h2>
          <p class="text-gray-600 dark:text-gray-400 max-w-md mx-auto mb-6">
            We're working on application guides for robotics, trading, and recommendation systems.
          </p>
          <a href="/" class="text-primary-600 dark:text-primary-400 hover:underline">‚Üê Back to Home</a>
        </div>
      ) : (
        <div class="space-y-12">
          {Object.entries(appsBySection).map(([section, sectionApps]) => (
            <section>
              <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100">{section}</h2>
              <div class="grid gap-4">
                {sectionApps.map((app, index) => (
                  <a
                    href={`/applications/${app.slug}`}
                    class="group block bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 hover:border-primary-300 dark:hover:border-primary-600 hover:shadow-lg transition-all"
                  >
                    <div class="flex items-start justify-between gap-4">
                      <div class="flex-1">
                        <div class="flex items-center gap-3 mb-2">
                          <span class="text-sm font-mono text-gray-400 dark:text-gray-500">
                            {String(index + 1).padStart(2, '0')}
                          </span>
                          <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                            {app.title}
                          </h3>
                        </div>
                        <p class="text-gray-600 dark:text-gray-400 ml-8">{app.description}</p>
                      </div>
                      <div class="flex items-center gap-2">
                        <span class="text-lg" title={statusLabels[app.status]}>
                          {statusIcons[app.status]}
                        </span>
                        <svg
                          class="w-5 h-5 text-gray-400 dark:text-gray-500 group-hover:text-primary-600 dark:group-hover:text-primary-400 group-hover:translate-x-1 transition-all"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </section>
          ))}
        </div>
      )}

      <!-- Status Legend -->
      <div class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
        <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-4">Content Status</h3>
        <div class="flex flex-wrap gap-6 text-sm">
          <div class="flex items-center gap-2">
            <span>üìù</span>
            <span class="text-gray-600 dark:text-gray-400">AI Generated ‚Äî Pending review</span>
          </div>
          <div class="flex items-center gap-2">
            <span>‚úÖ</span>
            <span class="text-gray-600 dark:text-gray-400">Editor Reviewed ‚Äî Approved by editor</span>
          </div>
          <div class="flex items-center gap-2">
            <span>üë•</span>
            <span class="text-gray-600 dark:text-gray-400">Community Reviewed ‚Äî Incorporates feedback</span>
          </div>
          <div class="flex items-center gap-2">
            <span>üîí</span>
            <span class="text-gray-600 dark:text-gray-400">Verified ‚Äî Code tested, demos working</span>
          </div>
        </div>
      </div>
    </main>
  </div>
</BaseLayout>
