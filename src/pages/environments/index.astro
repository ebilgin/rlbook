---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getContentItems, statusIcons, statusLabels } from '../../lib/content';

// Get all environment MDX files
const mdxModules = import.meta.glob('/content/environments/*/index.mdx', { eager: true });
const environments = getContentItems(mdxModules, 'environments');

// Group by section if available
const envsBySection = environments.reduce((acc, env) => {
  const section = env.section || 'Environments';
  if (!acc[section]) acc[section] = [];
  acc[section].push(env);
  return acc;
}, {} as Record<string, typeof environments>);
---

<BaseLayout title="Environments">
  <div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-5xl mx-auto px-4 py-12">
        <nav class="text-sm text-gray-500 dark:text-gray-400 mb-4">
          <a href="/" class="hover:text-primary-600 dark:hover:text-primary-400">Home</a>
          <span class="mx-2">â†’</span>
          <span class="text-gray-900 dark:text-gray-100">Environments</span>
        </nav>
        <div class="flex items-center gap-3 mb-4">
          <span class="text-4xl">ğŸ®</span>
          <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100">Environments</h1>
        </div>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl">
          Interactive playgrounds for experimenting with reinforcement learning algorithms.
          Run in your browser, adjust parameters, and build intuition.
        </p>
      </div>
    </header>

    <!-- Environments List -->
    <main class="max-w-5xl mx-auto px-4 py-12">
      {environments.length === 0 ? (
        <div class="text-center py-20 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
          <div class="text-6xl mb-4">ğŸ®</div>
          <h2 class="text-2xl font-bold mb-4 text-gray-900 dark:text-gray-100">Environments Coming Soon</h2>
          <p class="text-gray-600 dark:text-gray-400 max-w-md mx-auto mb-6">
            We're building interactive playgrounds for GridWorld, bandits, and more.
          </p>
          <a href="/" class="text-primary-600 dark:text-primary-400 hover:underline">â† Back to Home</a>
        </div>
      ) : (
        <div class="space-y-12">
          {Object.entries(envsBySection).map(([section, sectionEnvs]) => (
            <section>
              <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100">{section}</h2>
              <div class="grid md:grid-cols-2 gap-6">
                {sectionEnvs.map((env) => (
                  <a
                    href={`/environments/${env.slug}`}
                    class="group block bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-6 hover:border-primary-300 dark:hover:border-primary-600 hover:shadow-lg transition-all"
                  >
                    <div class="flex items-start justify-between gap-4 mb-4">
                      <h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                        {env.title}
                      </h3>
                      <span class="text-lg" title={statusLabels[env.status]}>
                        {statusIcons[env.status]}
                      </span>
                    </div>
                    <p class="text-gray-600 dark:text-gray-400 mb-4">{env.description}</p>
                    <div class="flex items-center text-primary-600 dark:text-primary-400 text-sm font-medium">
                      Try it
                      <svg
                        class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </div>
                  </a>
                ))}
              </div>
            </section>
          ))}
        </div>
      )}

      <!-- Status Legend -->
      <div class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
        <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-4">Content Status</h3>
        <div class="flex flex-wrap gap-6 text-sm">
          <div class="flex items-center gap-2">
            <span>ğŸ“</span>
            <span class="text-gray-600 dark:text-gray-400">AI Generated â€” Pending review</span>
          </div>
          <div class="flex items-center gap-2">
            <span>âœ…</span>
            <span class="text-gray-600 dark:text-gray-400">Editor Reviewed â€” Approved by editor</span>
          </div>
          <div class="flex items-center gap-2">
            <span>ğŸ‘¥</span>
            <span class="text-gray-600 dark:text-gray-400">Community Reviewed â€” Incorporates feedback</span>
          </div>
          <div class="flex items-center gap-2">
            <span>ğŸ”’</span>
            <span class="text-gray-600 dark:text-gray-400">Verified â€” Code tested, demos working</span>
          </div>
        </div>
      </div>
    </main>
  </div>
</BaseLayout>
