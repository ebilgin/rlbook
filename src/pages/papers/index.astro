---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getContentItems, statusIcons, statusLabels, type ContentStatus } from '../../lib/content';

// Get all paper MDX files
const mdxModules = import.meta.glob('/content/papers/*/index.mdx', { eager: true });
const papers = getContentItems(mdxModules, 'papers');

// Group by section if available
const papersBySection = papers.reduce((acc, paper) => {
  const section = paper.section || 'Papers';
  if (!acc[section]) acc[section] = [];
  acc[section].push(paper);
  return acc;
}, {} as Record<string, typeof papers>);
---

<BaseLayout title="Papers">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200">
      <div class="max-w-5xl mx-auto px-4 py-12">
        <nav class="text-sm text-gray-500 mb-4">
          <a href="/" class="hover:text-primary-600">Home</a>
          <span class="mx-2">â†’</span>
          <span class="text-gray-900">Papers</span>
        </nav>
        <div class="flex items-center gap-3 mb-4">
          <span class="text-4xl">ğŸ“„</span>
          <h1 class="text-4xl font-bold">Papers</h1>
        </div>
        <p class="text-xl text-gray-600 max-w-2xl">
          Deep dive analyses of seminal reinforcement learning papers.
          Historical context, key insights, and critical analysis.
        </p>
      </div>
    </header>

    <!-- Papers List -->
    <main class="max-w-5xl mx-auto px-4 py-12">
      {papers.length === 0 ? (
        <div class="text-center py-20 bg-white rounded-xl border border-gray-200">
          <div class="text-6xl mb-4">ğŸ“„</div>
          <h2 class="text-2xl font-bold mb-4">Papers Coming Soon</h2>
          <p class="text-gray-600 max-w-md mx-auto mb-6">
            We're working on deep dives into seminal RL papers like DQN, PPO, and AlphaGo.
          </p>
          <a href="/" class="text-primary-600 hover:underline">â† Back to Home</a>
        </div>
      ) : (
        <div class="space-y-12">
          {Object.entries(papersBySection).map(([section, sectionPapers]) => (
            <section>
              <h2 class="text-2xl font-bold mb-6">{section}</h2>
              <div class="grid gap-4">
                {sectionPapers.map((paper, index) => (
                  <a
                    href={`/papers/${paper.slug}`}
                    class="group block bg-white rounded-xl border border-gray-200 p-6 hover:border-primary-300 hover:shadow-lg transition-all"
                  >
                    <div class="flex items-start justify-between gap-4">
                      <div class="flex-1">
                        <div class="flex items-center gap-3 mb-2">
                          <span class="text-sm font-mono text-gray-400">
                            {String(index + 1).padStart(2, '0')}
                          </span>
                          <h3 class="text-lg font-semibold group-hover:text-primary-600 transition-colors">
                            {paper.title}
                          </h3>
                        </div>
                        <p class="text-gray-600 ml-8">{paper.description}</p>
                      </div>
                      <div class="flex items-center gap-2">
                        <span class="text-lg" title={statusLabels[paper.status]}>
                          {statusIcons[paper.status]}
                        </span>
                        <svg
                          class="w-5 h-5 text-gray-400 group-hover:text-primary-600 group-hover:translate-x-1 transition-all"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </section>
          ))}
        </div>
      )}

      <!-- Status Legend -->
      <div class="mt-16 pt-8 border-t border-gray-200">
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4">Content Status</h3>
        <div class="flex flex-wrap gap-6 text-sm">
          <div class="flex items-center gap-2">
            <span>ğŸ“</span>
            <span class="text-gray-600">AI Generated â€” Pending review</span>
          </div>
          <div class="flex items-center gap-2">
            <span>âœ…</span>
            <span class="text-gray-600">Editor Reviewed â€” Approved by editor</span>
          </div>
          <div class="flex items-center gap-2">
            <span>ğŸ‘¥</span>
            <span class="text-gray-600">Community Reviewed â€” Incorporates feedback</span>
          </div>
          <div class="flex items-center gap-2">
            <span>ğŸ”’</span>
            <span class="text-gray-600">Verified â€” Code tested, demos working</span>
          </div>
        </div>
      </div>
    </main>
  </div>
</BaseLayout>
