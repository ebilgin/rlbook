---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getChaptersArray } from '../lib/chapters';

const chapterCount = getChaptersArray().length;

// Content categories with their details
const categories = [
  {
    id: 'chapters',
    icon: 'ğŸ“š',
    title: 'Chapters',
    tagline: 'Learn the concepts',
    description: 'Progressive lessons from bandits to deep RL. Intuition, math, and code at your pace.',
    href: '/chapters',
    available: true,
    stats: `${chapterCount} chapters`,
    color: 'primary',
  },
  {
    id: 'papers',
    icon: 'ğŸ“„',
    title: 'Papers',
    tagline: 'Deep dive research',
    description: 'Understand seminal papers like DQN, PPO, and AlphaGo. Context, insights, and critical analysis.',
    href: '/papers',
    available: true,
    stats: '1 paper',
    color: 'amber',
  },
  {
    id: 'applications',
    icon: 'ğŸ¯',
    title: 'Applications',
    tagline: 'Solve real problems',
    description: 'Formulate robotics, trading, and recommendation problems as RL. End-to-end guides.',
    href: '/applications',
    available: true,
    stats: '1 guide',
    color: 'rose',
  },
  {
    id: 'infrastructure',
    icon: 'ğŸ”§',
    title: 'Infrastructure',
    tagline: 'Scale and deploy',
    description: 'Distributed training, experiment tracking, production code, and deployment. Engineering guides.',
    href: '/infrastructure',
    available: true,
    stats: '1 guide',
    color: 'cyan',
  },
  {
    id: 'environments',
    icon: 'ğŸ®',
    title: 'Environments',
    tagline: 'Experiment hands-on',
    description: 'Interactive playgrounds to test algorithms. GridWorld, bandits, and more in your browser.',
    href: '/environments',
    available: true,
    stats: '1 environment',
    color: 'emerald',
  },
  {
    id: 'blog',
    icon: 'ğŸ“',
    title: 'Blog',
    tagline: 'News and insights',
    description: 'Updates about rlbook.ai, guest posts, and insights on reinforcement learning from contributors.',
    href: '/blog',
    available: true,
    stats: '1 post',
    color: 'violet',
  },
];
---

<BaseLayout title="Home">
  <div class="min-h-screen">
    <!-- Hero Section -->
    <header class="relative overflow-hidden bg-gradient-to-br from-gray-900 via-primary-900 to-gray-900">
      <!-- Subtle grid pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 40px 40px;"></div>
      </div>

      <div class="relative max-w-6xl mx-auto px-4 py-20 md:py-28">
        <div class="max-w-3xl">
          <div class="flex items-center gap-3 mb-6">
            <span class="bg-primary-500/20 text-primary-300 text-sm px-3 py-1 rounded-full border border-primary-500/30">
              Open Source
            </span>
            <span class="bg-white/10 text-gray-300 text-sm px-3 py-1 rounded-full border border-white/20">
              Community-Driven
            </span>
          </div>

          <h1 class="text-5xl md:text-6xl font-bold text-white mb-6 tracking-tight">
            rlbook<span class="text-primary-400">.ai</span>
          </h1>

          <p class="text-xl md:text-2xl text-gray-300 mb-8 leading-relaxed">
            Learn reinforcement learning through interactive content.
            <span class="text-white">AI-generated, human-reviewed, community-refined.</span>
          </p>

          <div class="flex flex-wrap gap-4">
            <a
              href="/chapters/intro-to-rl"
              class="inline-flex items-center gap-2 bg-primary-500 hover:bg-primary-400 text-white px-6 py-3 rounded-lg font-semibold transition-colors"
            >
              Start Learning
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
            <a
              href="https://github.com/ebilgin/rlbook"
              class="inline-flex items-center gap-2 bg-white/10 hover:bg-white/20 text-white px-6 py-3 rounded-lg font-semibold border border-white/20 transition-colors"
              target="_blank"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              View on GitHub
            </a>
          </div>
        </div>
      </div>
    </header>

    <!-- Content Categories -->
    <section class="py-20 bg-white dark:bg-gray-900">
      <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">Many Ways to Learn</h2>
          <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            Different goals, different content. Choose your path based on what you want to accomplish.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {categories.map((cat) => (
            <a
              href={cat.available ? cat.href : '#'}
              class={`group relative block p-6 rounded-2xl border-2 transition-all ${
                cat.available
                  ? 'border-gray-200 dark:border-gray-700 hover:border-primary-300 dark:hover:border-primary-600 hover:shadow-xl bg-white dark:bg-gray-800 cursor-pointer'
                  : 'border-gray-100 dark:border-gray-800 bg-gray-50 dark:bg-gray-900 cursor-default'
              }`}
            >
              <div class="flex items-start justify-between mb-4">
                <span class="text-4xl">{cat.icon}</span>
                <span class={`text-xs font-medium px-2 py-1 rounded-full ${
                  cat.available
                    ? 'bg-primary-100 dark:bg-primary-900/50 text-primary-700 dark:text-primary-300'
                    : 'bg-gray-200 dark:bg-gray-700 text-gray-500 dark:text-gray-400'
                }`}>
                  {cat.stats}
                </span>
              </div>

              <h3 class={`text-xl font-bold mb-1 ${cat.available ? 'group-hover:text-primary-600 dark:group-hover:text-primary-400' : ''}`}>
                {cat.title}
              </h3>
              <p class="text-primary-600 dark:text-primary-400 text-sm font-medium mb-3">{cat.tagline}</p>
              <p class="text-gray-600 dark:text-gray-400 text-sm">{cat.description}</p>

              {cat.available && (
                <div class="mt-4 flex items-center text-primary-600 dark:text-primary-400 text-sm font-medium opacity-0 group-hover:opacity-100 transition-opacity">
                  Explore
                  <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              )}
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-20 bg-gray-50 dark:bg-gray-800">
      <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold mb-4">How It Works</h2>
          <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
            Content is generated from carefully designed prompts, then reviewed and refined through community feedback.
          </p>
        </div>

        <div class="grid md:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-white dark:bg-gray-700 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-600 flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">âœï¸</span>
            </div>
            <h3 class="font-semibold mb-2">Prompt Design</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Structure, examples, and learning objectives defined upfront
            </p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-white dark:bg-gray-700 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-600 flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">ğŸ¤–</span>
            </div>
            <h3 class="font-semibold mb-2">AI Generation</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Content follows style guides and mathematical conventions
            </p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-white dark:bg-gray-700 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-600 flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">ğŸ‘ï¸</span>
            </div>
            <h3 class="font-semibold mb-2">Human Review</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Accuracy, clarity, and pedagogical quality verified
            </p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-white dark:bg-gray-700 rounded-2xl shadow-sm border border-gray-200 dark:border-gray-600 flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl">ğŸ”„</span>
            </div>
            <h3 class="font-semibold mb-2">Community Feedback</h3>
            <p class="text-gray-600 dark:text-gray-400 text-sm">
              Readers suggest improvements; content and prompts evolve
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Community Section -->
    <section id="community" class="py-20 bg-white dark:bg-gray-900">
      <div class="max-w-6xl mx-auto px-4">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-bold mb-4">Join the Community</h2>
            <p class="text-gray-600 dark:text-gray-400 mb-6">
              This is an open project. The content, prompts, and code are all on GitHub.
              Contributions of all kinds are welcome.
            </p>

            <div class="space-y-4">
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-gray-100 dark:bg-gray-800 rounded-lg flex items-center justify-center">
                  <span class="text-lg">ğŸ’¬</span>
                </div>
                <div>
                  <h3 class="font-semibold">Report Issues</h3>
                  <p class="text-gray-600 dark:text-gray-400 text-sm">Typos, bugs, unclear explanations</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-gray-100 dark:bg-gray-800 rounded-lg flex items-center justify-center">
                  <span class="text-lg">ğŸ“</span>
                </div>
                <div>
                  <h3 class="font-semibold">Improve Prompts</h3>
                  <p class="text-gray-600 dark:text-gray-400 text-sm">Better prompts mean better content</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-gray-100 dark:bg-gray-800 rounded-lg flex items-center justify-center">
                  <span class="text-lg">ğŸ¨</span>
                </div>
                <div>
                  <h3 class="font-semibold">Build Demos</h3>
                  <p class="text-gray-600 dark:text-gray-400 text-sm">Interactive visualizations and playgrounds</p>
                </div>
              </div>
              <div class="flex gap-4">
                <div class="flex-shrink-0 w-10 h-10 bg-gray-100 dark:bg-gray-800 rounded-lg flex items-center justify-center">
                  <span class="text-lg">âœ…</span>
                </div>
                <div>
                  <h3 class="font-semibold">Review Content</h3>
                  <p class="text-gray-600 dark:text-gray-400 text-sm">Help verify accuracy and quality</p>
                </div>
              </div>
            </div>
          </div>

          <div class="space-y-4">
            <a
              href="https://github.com/ebilgin/rlbook"
              class="flex items-center gap-4 p-5 bg-gray-900 dark:bg-gray-800 text-white rounded-xl hover:bg-gray-800 dark:hover:bg-gray-700 transition-colors"
              target="_blank"
            >
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <div>
                <div class="font-semibold">GitHub Repository</div>
                <div class="text-gray-400 text-sm">Code, content, and issues</div>
              </div>
            </a>

            <a
              href="https://discord.gg/mJ7n3zNf7r"
              class="flex items-center gap-4 p-5 bg-[#5865F2] text-white rounded-xl hover:bg-[#4752C4] transition-colors"
              target="_blank"
            >
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189Z"/>
              </svg>
              <div>
                <div class="font-semibold">Discord Community</div>
                <div class="text-white/70 text-sm">Chat with other learners</div>
              </div>
            </a>

            <a
              href="https://github.com/ebilgin/rlbook/blob/main/docs/CONTRIBUTING.md"
              class="flex items-center gap-4 p-5 bg-gray-100 dark:bg-gray-800 rounded-xl hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
              target="_blank"
            >
              <span class="text-3xl">ğŸ“–</span>
              <div>
                <div class="font-semibold">Contributing Guide</div>
                <div class="text-gray-600 dark:text-gray-400 text-sm">How to get started</div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- About -->
    <section class="py-12 bg-gray-50 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
      <div class="max-w-6xl mx-auto px-4 text-center">
        <p class="text-gray-600 dark:text-gray-400">
          Created by <a href="https://www.linkedin.com/in/enesbilgin" class="text-primary-600 dark:text-primary-400 hover:underline font-medium" target="_blank">Enes Bilgin</a>,
          author of <a href="https://www.amazon.com/Mastering-Reinforcement-Learning-Python-next-generation/dp/1838644148" class="text-primary-600 dark:text-primary-400 hover:underline" target="_blank">"Mastering Reinforcement Learning with Python"</a>.
          <br class="hidden md:block" />
          An experiment in AI-assisted educationâ€”creating high-quality learning resources through human-AI collaboration.
        </p>
      </div>
    </section>

    <!-- Footer -->
    <footer class="py-8 bg-gray-900 text-gray-400">
      <div class="max-w-6xl mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <div class="text-sm">
            Content: CC BY-NC-SA 4.0 Â· Code: MIT
          </div>
          <div class="flex gap-6 text-sm">
            <a href="https://github.com/ebilgin/rlbook" class="hover:text-white transition-colors">GitHub</a>
            <a href="https://discord.gg/mJ7n3zNf7r" class="hover:text-white transition-colors">Discord</a>
            <a href="https://github.com/ebilgin/rlbook/blob/main/docs/CONTRIBUTING.md" class="hover:text-white transition-colors">Contribute</a>
          </div>
        </div>
      </div>
    </footer>
  </div>
