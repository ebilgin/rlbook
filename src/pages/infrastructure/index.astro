---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getContentItems, statusIcons, statusLabels } from '../../lib/content';

// Get all infrastructure MDX files
const mdxModules = import.meta.glob('/content/infrastructure/*/index.mdx', { eager: true });
const guides = getContentItems(mdxModules, 'infrastructure');

// Group by section if available
const guidesBySection = guides.reduce((acc, guide) => {
  const section = guide.section || 'Guides';
  if (!acc[section]) acc[section] = [];
  acc[section].push(guide);
  return acc;
}, {} as Record<string, typeof guides>);
---

<BaseLayout title="Infrastructure">
  <div class="min-h-screen bg-gray-50">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200">
      <div class="max-w-5xl mx-auto px-4 py-12">
        <nav class="text-sm text-gray-500 mb-4">
          <a href="/" class="hover:text-primary-600">Home</a>
          <span class="mx-2">â†’</span>
          <span class="text-gray-900">Infrastructure</span>
        </nav>
        <div class="flex items-center gap-3 mb-4">
          <span class="text-4xl">ğŸ”§</span>
          <h1 class="text-4xl font-bold">Infrastructure</h1>
        </div>
        <p class="text-xl text-gray-600 max-w-2xl">
          Engineering guides and production-grade code for scaling, deploying, and
          productionizing reinforcement learning systems.
        </p>
      </div>
    </header>

    <!-- Guides List -->
    <main class="max-w-5xl mx-auto px-4 py-12">
      {guides.length === 0 ? (
        <div class="text-center py-20 bg-white rounded-xl border border-gray-200">
          <div class="text-6xl mb-4">ğŸ”§</div>
          <h2 class="text-2xl font-bold mb-4">Infrastructure Guides Coming Soon</h2>
          <p class="text-gray-600 max-w-md mx-auto mb-6">
            We're working on guides for distributed training, experiment tracking, and deployment.
          </p>
          <a href="/" class="text-primary-600 hover:underline">â† Back to Home</a>
        </div>
      ) : (
        <div class="space-y-12">
          {Object.entries(guidesBySection).map(([section, sectionGuides]) => (
            <section>
              <h2 class="text-2xl font-bold mb-6">{section}</h2>
              <div class="grid gap-4">
                {sectionGuides.map((guide, index) => (
                  <a
                    href={`/infrastructure/${guide.slug}`}
                    class="group block bg-white rounded-xl border border-gray-200 p-6 hover:border-primary-300 hover:shadow-lg transition-all"
                  >
                    <div class="flex items-start justify-between gap-4">
                      <div class="flex-1">
                        <div class="flex items-center gap-3 mb-2">
                          <span class="text-sm font-mono text-gray-400">
                            {String(index + 1).padStart(2, '0')}
                          </span>
                          <h3 class="text-lg font-semibold group-hover:text-primary-600 transition-colors">
                            {guide.title}
                          </h3>
                        </div>
                        <p class="text-gray-600 ml-8">{guide.description}</p>
                      </div>
                      <div class="flex items-center gap-2">
                        <span class="text-lg" title={statusLabels[guide.status]}>
                          {statusIcons[guide.status]}
                        </span>
                        <svg
                          class="w-5 h-5 text-gray-400 group-hover:text-primary-600 group-hover:translate-x-1 transition-all"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </div>
                    </div>
                  </a>
                ))}
              </div>
            </section>
          ))}
        </div>
      )}

      <!-- Code Section -->
      <div class="mt-12 p-6 bg-cyan-50 rounded-xl border border-cyan-200">
        <h3 class="text-lg font-bold text-cyan-900 mb-2">Production Code</h3>
        <p class="text-cyan-800 mb-4">
          Looking for tested, production-ready implementations? Check out our code repository
          with reference implementations, training scripts, and deployment templates.
        </p>
        <a
          href="https://github.com/ebilgin/rlbook/tree/main/code"
          class="inline-flex items-center gap-2 text-cyan-700 hover:text-cyan-900 font-medium"
          target="_blank"
        >
          View Code on GitHub
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>

      <!-- Status Legend -->
      <div class="mt-16 pt-8 border-t border-gray-200">
        <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-4">Content Status</h3>
        <div class="flex flex-wrap gap-6 text-sm">
          <div class="flex items-center gap-2">
            <span>ğŸ“</span>
            <span class="text-gray-600">AI Generated â€” Pending review</span>
          </div>
          <div class="flex items-center gap-2">
            <span>âœ…</span>
            <span class="text-gray-600">Editor Reviewed â€” Approved by editor</span>
          </div>
          <div class="flex items-center gap-2">
            <span>ğŸ‘¥</span>
            <span class="text-gray-600">Community Reviewed â€” Incorporates feedback</span>
          </div>
          <div class="flex items-center gap-2">
            <span>ğŸ”’</span>
            <span class="text-gray-600">Verified â€” Code tested, demos working</span>
          </div>
        </div>
      </div>
    </main>
  </div>
</BaseLayout>
